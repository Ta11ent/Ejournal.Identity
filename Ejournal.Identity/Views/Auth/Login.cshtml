@model Login


            <div class="col-4 text-center">
                <form asp-contoroller="Auth" asp-action="Login" method="post">
                    <input type="hidden" asp-for="ReturnUrl" />
                    <h1 class="h3 fw-normal">Please sign in</h1>
                    <div class="form-floating">
                        <input asp-for="Email" type="email" class="form-control" placeholder="name@example.com" required>
                        <label>Email address</label>
                    </div>
                    <div class="form-floating">
                        <input asp-for="Password" type="password" class="form-control" placeholder="Password" required minlength="8" maxlength="100">
                        <label>Password</label>
                    </div>
                    <div>
                        <p class="mt-5 mb-3 text-muted"></p>
                    </div>
                    <div class="checkbox mb-3">
                        <label>
                            <input asp-for="Remeber" type="checkbox" value=true> Remember me
                        </label>
                    </div>
                    <div>
                        <button class="w-100 btn btn-lg btn-primary" type="submit">Sign in</button>
                    </div>
                </form>
            </div>

<footer>
   
    @if (Model.Invalid)
    {
        <div id="top-alert" class="alert alert-warning alert-dismissible fade show fixed-bottom">
            <svg class="bi flex-shrink-0 me-2" width="24" height="24" role="img" aria-label="Info:"><use xlink:href="#info-fill" /></svg>
            <span>Server: </span>
            <span asp-validation-for="Invalid"></span>
        </div>
    }
</footer>

